@model IEnumerable<DogHub.Models.AuditLog>
@{
    ViewBag.Title = "Audit Logs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Audit Logs</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Action</th>
        <th>Table</th>
        <th>Details</th>
        <th>By</th>
        <th>Time</th>
    </tr>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.ActionType</td>
            <td>@log.AffectedTable</td>
            <td>@log.AuditDetails</td>
            <td>@log.SysCreatedID</td>
            <td>@log.SysCreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
    }
</table>
