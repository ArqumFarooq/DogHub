@model DogHub.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-dark text-white text-center">
                <h4>Login</h4>
            </div>
            <div class="card-body">

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-@ViewBag.Color">
                        @ViewBag.Message
                    </div>
                }

                @using (Html.BeginForm("PostLogin", "Auth", FormMethod.Post, new { @id = "loginForm", @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        @Html.TextBox("Email", null, new { @class = "form-control", type = "email", required = "required" })
                        @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        @Html.Password("Password", null, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Login</button>
                    </div>
                }

                <div class="mt-3 text-center">
                    <p class="text-center">
                        <a href="@Url.Action("ForgotPassword", "Auth")">Forgot your password?</a>
                    </p>
                    <p>Don't have an account? <a href="@Url.Action("Register", "Auth")">Register here</a></p>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        (() => {
            'use strict';
            const form = document.getElementById('loginForm');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
