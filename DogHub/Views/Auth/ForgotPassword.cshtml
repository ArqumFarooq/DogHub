@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Forgot Password</h2>

@using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
{
    <div class="form-group">
        <label>Email address</label>
        @Html.TextBox("email", null, new { @class = "form-control", @placeholder = "Enter your email", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Send Reset Link</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert" style="margin-top: 10px; color:@ViewBag.Color">
        @ViewBag.Message
    </div>
}
