
@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="min-height:700px;">
    <br />
    <br />
    <form action="@Url.Action("PostAddUser", "Admin")" method="post">
        <div class="row m-10">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div class="text-left" style="color: @ViewBag.Color" id="alertMsg">
                            @ViewBag.Message
                        </div>
                        <h4 class="panel-title" align="center"><b><u>Create New User</u></b></h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group has-feedback">
                            <label class="text-bold">User Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter User Name" name="UserName" required="">
                            <div class="form-control-feedback">
                                <i class="icon-user-plus text-muted"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="text-bold">Email<span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" placeholder="Enter User Email" name="Email" required="">
                                    <div class="form-control-feedback">
                                        <i class="icon-mention text-muted"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="text-bold">Password<span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" placeholder="Enter User Password" name="Password" required="">
                                    <div class="form-control-feedback">
                                        <i class="icon--user-lock text-muted"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary" id="sub">Create<i class="icon-next position-right"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>